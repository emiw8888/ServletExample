<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>FirstServlet</servlet-name>
        <servlet-class>com.example.servletexample.FirstServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FirstServlet</servlet-name>
        <url-pattern>/getAllActiveDepartments</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetAverage</servlet-name>
        <servlet-class>com.example.servletexample.AverageSalaryForEachDepartmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAverage</servlet-name>
        <url-pattern>/getAverage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetEmployersByDeparmentId</servlet-name>
        <servlet-class>com.example.servletexample.GetEmployerByDepartmentIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetEmployersByDeparmentId</servlet-name>
        <url-pattern>/getEmployersByDepId</url-pattern>
    </servlet-mapping>


</web-app>